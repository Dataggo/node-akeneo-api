{
  "name": "@craftzing/akeneo-api",
  "version": "1.0.0",
  "description": "A Node Rest Client for the Akeneo PIM",
  "author": "Jens Verbeken <jens.verbeken@craftzing.com>",
  "license": "MIT",
  "types": "dist/cjs/index.d.ts",
  "exports": {
    "import": "./dist/mjs/index.js",
    "require": "./dist/cjs/index.js"
  },
  "main": "./dist/cjs/index.js",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "rm -fr dist/* && tsc -p tsconfig.json && tsc -p tsconfig-cjs.json && ./fixup",
    "watch": "tsc  -w -p tsconfig.json && tsc -w -p tsconfig-cjs.json",
    "build:docs": "typedoc --tsconfig tsconfig-base.json",
    "prepare": "yarn run build",
    "test": "jest"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "qs": "^6.9.6",
    "ramda": "^0.27.1"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@types/qs": "^6.9.5",
    "@types/ramda": "^0.27.36",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.2",
    "typedoc": "^0.20.19",
    "typescript": "^4.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "reporters": [
      "default"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
